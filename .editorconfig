[*.cs]

# CS8622: Typy odkazů s možnou hodnotou null v typu parametru neodpovídají cílovému delegátu (pravděpodobně kvůli atributům možnosti použití hodnoty null)
dotnet_diagnostic.CS8622.severity = silent

# CS8618: Pole, které nemůže být null, musí při ukončování konstruktoru obsahovat hodnotu, která není null. Zvažte přidání modifikátoru required nebo deklaraci s možnou hodnotou null.
dotnet_diagnostic.CS8618.severity = silent

# CS8604: Může jít o argument s odkazem null.
dotnet_diagnostic.CS8604.severity = silent

